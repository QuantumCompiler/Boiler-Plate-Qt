# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=default
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),default)
  rive_harfbuzz_config = default
  rive_sheenbidi_config = default
  miniaudio_config = default
  rive_yoga_config = default
  rive_config = default

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := rive_harfbuzz rive_sheenbidi miniaudio rive_yoga rive

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

rive_harfbuzz:
ifneq (,$(rive_harfbuzz_config))
	@echo "==== Building rive_harfbuzz ($(rive_harfbuzz_config)) ===="
	@${MAKE} --no-print-directory -C . -f rive_harfbuzz.make config=$(rive_harfbuzz_config)
endif

rive_sheenbidi:
ifneq (,$(rive_sheenbidi_config))
	@echo "==== Building rive_sheenbidi ($(rive_sheenbidi_config)) ===="
	@${MAKE} --no-print-directory -C . -f rive_sheenbidi.make config=$(rive_sheenbidi_config)
endif

miniaudio:
ifneq (,$(miniaudio_config))
	@echo "==== Building miniaudio ($(miniaudio_config)) ===="
	@${MAKE} --no-print-directory -C . -f miniaudio.make config=$(miniaudio_config)
endif

rive_yoga:
ifneq (,$(rive_yoga_config))
	@echo "==== Building rive_yoga ($(rive_yoga_config)) ===="
	@${MAKE} --no-print-directory -C . -f rive_yoga.make config=$(rive_yoga_config)
endif

rive:
ifneq (,$(rive_config))
	@echo "==== Building rive ($(rive_config)) ===="
	@${MAKE} --no-print-directory -C . -f rive.make config=$(rive_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f rive_harfbuzz.make clean
	@${MAKE} --no-print-directory -C . -f rive_sheenbidi.make clean
	@${MAKE} --no-print-directory -C . -f miniaudio.make clean
	@${MAKE} --no-print-directory -C . -f rive_yoga.make clean
	@${MAKE} --no-print-directory -C . -f rive.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  default"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   rive_harfbuzz"
	@echo "   rive_sheenbidi"
	@echo "   miniaudio"
	@echo "   rive_yoga"
	@echo "   rive"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"